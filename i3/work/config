set_from_resource $bg i3wm.color0 #f0f0f0
set_from_resource $fg i3wm.color15 #f0f0f0
set_from_resource $bg_a i3wm.color3 #a0f0f0
set_from_resource $fg_a i3wm.color13 #a0f0f0

