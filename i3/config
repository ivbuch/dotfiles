# SCREENSHOTS
set $FN $HOME/Pictures/screenshots/%Y-%m-%d__%H-%M-%S.png
set $mode_screenshot Screenshot mode (d) desktop (w) window selection
mode "$mode_screenshot" {

    bindsym d exec --no-startup-id exec scrot $FN && notify-send "Screenshot taken", mode "default"
    bindsym --release w exec --no-startup-id scrot -s $FN && notify-send "png screenshot of window taken", mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym Print mode "$mode_screenshot"


# SETTINGS
set $mode_settings Settings mode (r) reload i3 config (a) restart i3 (p) polybar (k) keyboard backlight (t) theme
mode "$mode_settings" {

    # reload i3wm settings
    bindsym r reload

    # restart i3wm
    bindsym a restart

    # restart polybar
    bindsym p exec /home/igor/workspace/dotfiles/polybar/launch-polybar.sh i3-restart

    # keyboard backlight
    bindsym k exec $script_path/change_kgb_backlight.sh

    # set random theme
    bindsym t exec systemctl start set-random-theme --user

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+r mode "$mode_settings"

