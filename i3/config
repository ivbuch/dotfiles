bindsym $mod+Shift+9 move container to workspace number $tab_mutt
bindsym $mod+Shift+0 move container to workspace number $tab_chats

set $mode_move (h/j/k/l) move containters (H/L) workspace to output
mode "$mode_move" {

	# move focused window
	bindsym h move left
	bindsym j move down
	bindsym k move up
	bindsym l move right

	# move workspaces
	bindsym Shift+h move workspace to output left
	bindsym Shift+l move workspace to output right

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+m mode "$mode_move"

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+q exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink height 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt

        bindsym h resize shrink width 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# choose xrandr displaymode
set $mode_display Display mode (d) dual, (m) monitor, (l) laptop
mode "$mode_display" {
    bindsym d exec --no-startup-id exec $script_path/display.sh dual, mode "default"
    bindsym m exec --no-startup-id exec $script_path/display.sh monitor, mode "default"
    bindsym l exec --no-startup-id exec $script_path/display.sh laptop, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+z mode "$mode_display"

# shutdown, reboot, lock script
set $mode_system System (l) lock, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id exec $script_path/i3exit.sh lock, mode "default"
    bindsym s exec --no-startup-id exec $script_path/i3exit.sh suspend, mode "default"
    bindsym r exec --no-startup-id exec $script_path/i3exit.sh reboot, mode "default"
    bindsym h exec --no-startup-id exec $script_path/i3exit.sh hibernate, mode "default"
    bindsym q exec --no-startup-id $script_path/i3exit.sh shutdown, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+Escape mode "$mode_system"

bindsym $mod+Escape exec --no-startup-id exec $script_path/i3exit.sh hibernate

